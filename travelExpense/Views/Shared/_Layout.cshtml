<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Travel Expense</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/travelExpense.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid vh-100">
        <div class="row h-100">
            <div class="sidebar border-right col-md-3 col-lg-2 p-0 bg-body-tertiary h-100">
                <div class="offcanvas-md offcanvas-end bg-body-tertiary" tabindex="-1" id="sidebarMenu" aria-labelledby="sidebarMenuLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="sidebarMenuLabel">Company Name</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#sidebarMenu" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body d-md-flex flex-column p-0 pt-lg-3 overflow-y-auto h-100">
                        <a  ="/" class="d-flex align-items-center text-decoration-none" style="margin-left: 15px; margin-bottom: 12px;">
                            <span class="h5 fw-bold text-dark">Travel Expense</span>
                        </a>
                        <div class="sidebar-content">
                            <ul class="nav flex-column">
                               @*  <li class="nav-item">
                                    <a class="nav-link d-flex align-items-center active" aria-current="page" href="/">
                                        Home
                                    </a>
                                </li> *@
                                <li class="nav-item">
                                    <a class="nav-link d-flex align-items-center active" aria-current="page" href="/Travel/Index">
                                        Travels
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link d-flex align-items-center active" aria-current="page" href="/Client/Index">
                                        Clients
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link d-flex align-items-center" href="@Url.Action("Logout", "Auth")">
                                        Logout
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <main class="col-md-9 col-lg-10">
                <div class="p-2">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
