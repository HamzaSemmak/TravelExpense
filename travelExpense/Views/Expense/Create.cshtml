@model travelExpense.Models.ViewModel.ExpenseViewModel

@{
    ViewData["Title"] = "Create Expense";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="row">

    <input asp-for="TravelId" type="hidden" />

    <div class="col-4">
        <div class="form-group">
            <label for="Category">Category</label>
            <input asp-for="Category" class="form-control" id="Category" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
    </div>

    <div class="col-4">
        <div class="form-group">
            <label for="Amount">Amount</label>
            <input asp-for="Amount" class="form-control" id="Amount" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
    </div>

    <div class="col-6">
        <div class="form-group">
            <label for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" id="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="col-12">
        <br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
