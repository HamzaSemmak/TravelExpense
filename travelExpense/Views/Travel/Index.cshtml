@{
    ViewData["Title"] = "Travels Overview";
}

@model List<travelExpense.Models.Travel>

<div class="d-flex align-items-center justify-content-between">
    <div>
        <h3 class="mt-4">Travels Overview</h3>
        <p class="text-muted">Here you can find a list of all recorded travels, including destinations, dates, and expenses.</p>
    </div>
    <a href="/Travel/Create" class="btn btn-primary"> Add Travel </a>
</div>

<table id="travelTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Date Creation</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var travel in Model)
            {
                <tr>
                    <td>@travel.Id</td>
                    <td>@travel.TravelName</td>
                    <td>@travel.CreatedAt</td>
                    <td>
                        @if (travel.Category != null)
                        {
                            @travel.Category.Name
                        }
                        else
                        {
                            <span class="text-muted">No Category</span>
                        }
                    </td>
                    <td>
                        <div class="d-flex align-items-center justify-content-center">
                            <button class="btn btn-info btn-sm">View</button> &nbsp;
                            <button class="btn btn-warning btn-sm">Edit</button> &nbsp;
                            <button class="btn btn-danger btn-sm">Delete</button> &nbsp;
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No travels found.</td>
            </tr>
        }
    </tbody>
</table>
